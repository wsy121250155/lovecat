<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="260dp"
    android:background="#000000"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp" >

    <RelativeLayout
        android:id="@+id/tip_top"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:background="#ebeef5" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="提示"
            android:textColor="#43474c" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tip_bottom"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="#ebeef5" >

        <Button
            android:id="@+id/ok"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:padding="3dp"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:background="#bbc5d6"
             />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tip_center"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/tip_bottom"
        android:layout_below="@id/tip_top"
        android:background="#bbc5d6"
        android:gravity="center" >

        <ImageView
            android:id="@+id/tip_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/tip_info_icon" />

        <TextView
            android:id="@+id/tipText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tip_icon"
            android:gravity="center_vertical"
            android:maxLines="8"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:textColor="#43474c" />
    </RelativeLayout>

</RelativeLayout>