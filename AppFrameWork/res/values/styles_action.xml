<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.noTile" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Theme.Example" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/ActionBar.Solid.Example</item>
        <item name="homeAsUpIndicator">@drawable/bt_back_tl</item>
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>

    <style name="Theme.TExample" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/ActionBar.Solid.Example</item>
        <item name="homeAsUpIndicator">@drawable/bt_back_tl</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>

    <style name="ActionBar.Solid.Example" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@color/purple</item>
        <item name="backgroundStacked">@color/transparent</item>
        <item name="backgroundSplit">@color/transparent</item>
        <item name="titleTextStyle">@style/AcBar_titleStyle</item>
    </style>

    <style name="AcBar_titleStyle">
        <item name="android:textColor">@color/df_w_color</item>
        <item name="android:textSize">20sp</item>
    </style>


    <!--  -->

    <style name="Theme.Transparent.Example" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/ActionBar.Solid.Transparent</item>
        <item name="homeAsUpIndicator">@drawable/bt_back_tl</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ActionBar.Solid.Transparent" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@color/transparent</item>
        <item name="backgroundStacked">@color/transparent</item>
        <item name="backgroundSplit">@color/transparent</item>
        <item name="titleTextStyle">@style/AcBar_TransparenttitleStyle</item>
    </style>

    <style name="AcBar_TransparenttitleStyle">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AcBar_TransparentsubtitleStyle">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="loginDialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 第二步设置主题 -->
    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">

        <!-- 点击时在不同状态下显示的背景色 -->
        <item name="android:background">@drawable/custom_tab_indicator</item>
        <!-- 分割线图片设置 -->
        <!-- 设置分割线的显示位置，或是不显示 -->
        <item name="showDividers">none</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textColor">#FF555555</item>
        <item name="android:textSize">16sp</item>
        <item name="dividerPadding">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:fadingEdgeLength">10dp</item>
        <item name="android:fadingEdge">horizontal</item>
    </style>
    <!-- 第三步设置主题 -->
    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
    </style>

</resources>