<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="#90333333"
    android:paddingBottom="25dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp" >

    <RelativeLayout
        android:id="@+id/contain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/getphoto_choosfile"
            android:src="@drawable/camera_dialog_icon"
            android:visibility="gone" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+dialog/icon"
            android:text="@string/getphoto_sharephoto"
            android:textColor="#ff000000"
            android:textSize="20.0sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <Button
        android:id="@+id/capture"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+cameradialog/contain"
        android:background="@drawable/camera_dialog_up_unselete"
        android:gravity="left|center"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="@string/getphoto_rephoto"
        android:textColor="#ff2e2e2e"
        android:textSize="20.0sp" />

    <Button
        android:id="@+id/pick"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+cameradialog/capture"
        android:background="@drawable/camera_dialog_down_unselete"
        android:gravity="left|center"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="@string/getphoto_choosfile"
        android:textColor="#ff2e2e2e"
        android:textSize="20.0sp" />

</RelativeLayout>